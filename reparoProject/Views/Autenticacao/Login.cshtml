@{
    ViewBag.Title = "Autenticacao";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string idDaSessao = Session.SessionID;
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<style>
    .container {
        width: 50vw;
        height: 65vh;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .centraliza {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }
</style>

<div id="divLogin">
    <div class="container">
        <div class="jumbotron">
            <div class="centraliza">
                <h2 class="display-4" style="color: white;">Login</h2>
            </div>
            <form action="/autenticacao/logar" method="post">
                <div class="form-group">
                    <label style="color: white;"> Usuário</label>
                    <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Insira seu nome de usuário">
                </div>
                <div class="form-group">
                    <label style="color: white;"> Senha</label>
                    <input type="password" class="form-control" id="senha" name="senha" placeholder="Insira sua senha">
                    <input style="display: none;" type="text" class="form-control" id="idSessao" name="idSessao">
                    <small id="emailHelp" class="form-text text-muted">Nunca compartilhe sua senha com alguém.</small>
                </div>
                <div class="centraliza">
                    <button type="submit" id="botaoLogin" name="botaoLogin" class="btn btn-primary" style="background-color: white; color: black; border-color: white">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $().ready(function () {
        document.getElementById('idSessao').value = '@idDaSessao';
    });
</script>